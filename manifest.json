{
  "manifest_version": 3,
  "name": "Hover",
  "description": "hover",
  "version": "1.0",
  "icons": {
    "128": "images/chicken.png"
  },
  "background": {
    "service_worker": "scripts/background.js"
  },
  "action": {
    "default_icon": "images/chicken.png",
    "default_popup": "html/popup.html"
  },

  "permissions": ["scripting", "activeTab"],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+B",
        "mac": "Command+B"
      }
    }
  }
}
